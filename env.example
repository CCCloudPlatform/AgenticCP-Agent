# 애플리케이션 설정
APP_NAME=AgenticCP Agent
APP_VERSION=0.1.0
APP_DESCRIPTION=Python FastAPI 기반 에이전트 서비스
DEBUG=false
ENVIRONMENT=development

# 서버 설정
HOST=0.0.0.0
PORT=8000
WORKERS=1

# 데이터베이스 설정
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/agenticcp_agent
DATABASE_URL_SYNC=postgresql://user:password@localhost:5432/agenticcp_agent

# Redis 설정 (캐싱 및 세션)
REDIS_URL=redis://localhost:6379/0

# JWT 설정
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# 로깅 설정
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/agent.log

# CORS 설정
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
CORS_CREDENTIALS=true
CORS_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_HEADERS=["*"]

# API 설정
API_V1_PREFIX=/api/v1
API_TITLE=AgenticCP Agent API
API_DESCRIPTION=AgenticCP Agent 서비스 API 문서
API_VERSION=0.1.0

# 모니터링 설정
ENABLE_METRICS=true
METRICS_PATH=/metrics
HEALTH_CHECK_PATH=/health

# 외부 서비스 설정
CORE_SERVICE_URL=http://localhost:8080
CORE_SERVICE_API_KEY=your-core-service-api-key

# 에이전트 설정
AGENT_ID=agent-001
AGENT_NAME=Default Agent
AGENT_TYPE=general
MAX_CONCURRENT_TASKS=10
TASK_TIMEOUT_SECONDS=300

# 개발 설정
RELOAD=true
RELOAD_DIRS=["src"]


# 프로덕션 환경 설정 파일
# 이 파일을 .env.prod로 복사하여 사용하세요
# 보안을 위해 실제 값으로 교체하고 .gitignore에 추가하세요

# 애플리케이션 설정
APP_NAME=AgenticCP Agent
APP_VERSION=0.1.0
APP_DESCRIPTION=Python FastAPI 기반 에이전트 서비스
DEBUG=false
ENVIRONMENT=production

# 서버 설정
HOST=0.0.0.0
PORT=8000
WORKERS=4

# 데이터베이스 설정 (프로덕션용 - 강력한 비밀번호 사용)
POSTGRES_DB=agenticcp_agent_prod
POSTGRES_USER=agenticcp_prod
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_IN_PRODUCTION
POSTGRES_PORT=5432
POSTGRES_CONTAINER_NAME=agenticcp-agent-postgres-prod

# Redis 설정 (프로덕션용)
REDIS_PORT=6379
REDIS_CONTAINER_NAME=agenticcp-agent-redis-prod

# 애플리케이션 컨테이너 설정
AGENT_PORT=8000
AGENT_CONTAINER_NAME=agenticcp-agent-prod

# JWT 설정 (프로덕션용 - 강력한 비밀키 사용)
SECRET_KEY=CHANGE_THIS_STRONG_SECRET_KEY_IN_PRODUCTION_USE_RANDOM_STRING
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# 로깅 설정
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/agent.log

# CORS 설정 (프로덕션용 - 실제 도메인으로 제한)
CORS_ORIGINS=["https://yourdomain.com", "https://api.yourdomain.com"]
CORS_CREDENTIALS=true
CORS_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_HEADERS=["*"]

# API 설정
API_V1_PREFIX=/api/v1
API_TITLE=AgenticCP Agent API
API_DESCRIPTION=AgenticCP Agent 서비스 API 문서
API_VERSION=0.1.0

# 모니터링 설정
ENABLE_METRICS=true
METRICS_PATH=/metrics
HEALTH_CHECK_PATH=/health

# 외부 서비스 설정
CORE_SERVICE_URL=https://api.yourdomain.com
CORE_SERVICE_API_KEY=your-production-core-service-api-key

# 에이전트 설정
AGENT_ID=agent-prod-001
AGENT_NAME=Production Agent
AGENT_TYPE=general
MAX_CONCURRENT_TASKS=50
TASK_TIMEOUT_SECONDS=600

# 프로덕션 설정
RELOAD=false
RELOAD_DIRS=[]

# Multi-Agent System 설정
MULTI_AGENT_LLM_PROVIDER=bedrock
MULTI_AGENT_OPENAI_API_KEY=your-production-openai-api-key
MULTI_AGENT_OPENAI_MODEL=gpt-4o-mini
MULTI_AGENT_OPENAI_TEMPERATURE=0.1

# AWS Bedrock 설정
MULTI_AGENT_BEDROCK_MODEL_ID=amazon.titan-embed-text-v2:0
MULTI_AGENT_BEDROCK_TEMPERATURE=0.1
MULTI_AGENT_BEDROCK_MAX_TOKENS=4000
MULTI_AGENT_BEDROCK_TOP_P=0.9
MULTI_AGENT_BEDROCK_TOP_K=250

# AWS 설정 (프로덕션용 - 실제 키로 교체 필요)
MULTI_AGENT_AWS_ACCESS_KEY_ID=your-production-aws-access-key-id
MULTI_AGENT_AWS_SECRET_ACCESS_KEY=your-production-aws-secret-access-key
MULTI_AGENT_AWS_REGION=ap-northeast-2
MULTI_AGENT_AWS_PROFILE=production
MULTI_AGENT_MAX_CONVERSATION_HISTORY=1000
MULTI_AGENT_CONVERSATION_TIMEOUT=7200
MULTI_AGENT_EC2_DEFAULT_INSTANCE_TYPE=t3.medium
MULTI_AGENT_EC2_DEFAULT_AMI=ami-0abcdef1234567890

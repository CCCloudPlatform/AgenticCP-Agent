# 개발 환경 설정 파일
# 이 파일을 .env.dev로 복사하여 사용하세요

# 애플리케이션 설정
APP_NAME=AgenticCP Agent
APP_VERSION=0.1.0
APP_DESCRIPTION=Python FastAPI 기반 에이전트 서비스
DEBUG=true
ENVIRONMENT=development

# 서버 설정
HOST=0.0.0.0
PORT=8000
WORKERS=1

# 데이터베이스 설정 (개발용)
POSTGRES_DB=agenticcp_agent_dev
POSTGRES_USER=agenticcp_dev
POSTGRES_PASSWORD=agenticcp_dev123
POSTGRES_PORT=5432
POSTGRES_CONTAINER_NAME=agenticcp-agent-postgres-dev

# Redis 설정 (개발용)
REDIS_PORT=6379
REDIS_CONTAINER_NAME=agenticcp-agent-redis-dev

# 애플리케이션 컨테이너 설정
AGENT_PORT=8000
AGENT_CONTAINER_NAME=agenticcp-agent-dev
ADMINER_PORT=8080
ADMINER_CONTAINER_NAME=agenticcp-agent-adminer-dev

# JWT 설정 (개발용 - 보안에 주의)
SECRET_KEY=dev-secret-key-not-for-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# 로깅 설정
LOG_LEVEL=DEBUG
LOG_FORMAT=json
LOG_FILE=logs/agent.log

# CORS 설정 (개발용)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://localhost:8000"]
CORS_CREDENTIALS=true
CORS_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_HEADERS=["*"]

# API 설정
API_V1_PREFIX=/api/v1
API_TITLE=AgenticCP Agent API
API_DESCRIPTION=AgenticCP Agent 서비스 API 문서
API_VERSION=0.1.0

# 모니터링 설정
ENABLE_METRICS=true
METRICS_PATH=/metrics
HEALTH_CHECK_PATH=/health

# 외부 서비스 설정
CORE_SERVICE_URL=http://localhost:8080
CORE_SERVICE_API_KEY=your-core-service-api-key

# 에이전트 설정
AGENT_ID=agent-001
AGENT_NAME=Default Agent
AGENT_TYPE=general
MAX_CONCURRENT_TASKS=10
TASK_TIMEOUT_SECONDS=300

# 개발 설정
RELOAD=true
RELOAD_DIRS=["src"]

# Multi-Agent System 설정
MULTI_AGENT_LLM_PROVIDER=bedrock
MULTI_AGENT_OPENAI_API_KEY=your-openai-api-key-here
MULTI_AGENT_OPENAI_MODEL=gpt-4o-mini
MULTI_AGENT_OPENAI_TEMPERATURE=0.1

# AWS Bedrock 설정
MULTI_AGENT_BEDROCK_MODEL_ID=amazon.titan-embed-text-v2:0
MULTI_AGENT_BEDROCK_TEMPERATURE=0.1
MULTI_AGENT_BEDROCK_MAX_TOKENS=4000
MULTI_AGENT_BEDROCK_TOP_P=0.9
MULTI_AGENT_BEDROCK_TOP_K=250

# AWS 설정 (개발용 - 실제 키로 교체 필요)
MULTI_AGENT_AWS_ACCESS_KEY_ID=your-aws-access-key-id-here
MULTI_AGENT_AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key-here
MULTI_AGENT_AWS_REGION=ap-northeast-2
MULTI_AGENT_AWS_PROFILE=default
MULTI_AGENT_MAX_CONVERSATION_HISTORY=100
MULTI_AGENT_CONVERSATION_TIMEOUT=3600
MULTI_AGENT_EC2_DEFAULT_INSTANCE_TYPE=t2.micro
MULTI_AGENT_EC2_DEFAULT_AMI=ami-0abcdef1234567890
